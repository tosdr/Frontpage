<div class="col-{{ col }}">
    <div class="card h-100">
        <div class="card-body d-flex flex-column">
            <h4 class="card-title">
                {{ extension.browser }} {{ plugin.getTranslation(extension.type) }}
            </h4>
            <div class="card-text mb-2">
                <div class="row">
                    <div class="col-2">
                        <img class="img-responsive" style="max-width: 42px;" src="{{ extension.image }}">
                    </div>
                    <div class="col-10">
                        {{ plugin.getTranslation(extension.description)|raw }}
                    </div>
                </div>
            </div>
            <div class="btn-group d-flex mt-auto" role="group" aria-label="...">
                <a target="_blank" href="{{ extension.repository }}" class="btn btn-warning btn-block mt-auto w-100 h-100"><i class="fab fa-github"></i> {{ plugin.getTranslation('view_source') }}</a>
                <a target="_blank" href="{{ extension.url }}" class="btn btn-success btn-block mt-auto w-100 h-100"><i class="fas fa-download"></i> {{ plugin.getTranslation('add_to', 1, {"{{ browser }}": extension.browser}) }}</a>
            </div>

        </div>
    </div>
</div>