{% set currentPage = 'about' %}
{% set pageTitle = plugin.getTranslation('about') %}
{% set error = false %}



{% extends "base.twig" %}

{% block content %}
    {{ include("components/navbar.twig") }}

    <div class="jumbotron jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4">{{ plugin.getTranslation('about') }}</h1>
            <p class="mt-2">{{ plugin.getTranslation('about_jumbotron_paragraph_1')|raw }}</p>
            <p class="mt-2">{{ plugin.getTranslation('about_jumbotron_paragraph_2')|raw }}</p>
            <p class="mt-2">{{ plugin.getTranslation('about_jumbotron_paragraph_3')|raw }}</p>
            <p class="mt-2">{{ plugin.getTranslation('about_jumbotron_paragraph_4')|raw }}</p>
        </div>
    </div>
    <div class="container">
        <section id="team">
            {% if isMobile == true %}
                {% set colSize = 1 %}
            {% else %}
                {% set colSize = 4 %}
            {% endif %}
            {% include plugin.PluginName ~ "/templates/teamgrid/grid.twig" with {'Team': plugin.getConfig("members"), 'columns': colSize} %}
        </section>
    </div>
{% endblock %}