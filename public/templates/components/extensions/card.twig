<div class="col-xl-4 col-sm-12 mt-2">
	<div class="shadow-lg card-rounded custom-card bg-body d-flex h-100">
		<div class="card-body">

			{% if extension.soon %}
			<div class="ribbon ribbon-top-right">
				<span>{{ 'views.downloads.ribbon.soon.text'|translate }}</span>
			</div>
    {% endif %}
			<div class="p-3">
				<div class="row">
					<div class="col-4">
						<img src="{{ config.s3_branding }}{{ extension.image }}" width="100" alt="{{ extension.browser }}"/>
					</div>
					<div class="col-8">
						<span class="ms-1 fs-3">{{ extension.browser }}</span>
						<p class="ms-1 fs-6">{{ extension.description }}</p>
					</div>
				</div>
			</div>
			{% if extension.soon != true %}
				<div class="p-3 text-center">
					<div class="btn-group" role="group" aria-label="Basic example">
						<button type="button" class="btn btn-primary">
							<i class="fas fa-download"></i>
						</button>
						<button type="button" class="btn btn-warning">
							<i class="fas fa-flask"></i>
						</button>
						<button type="button" class="btn btn-secondary">
							<i class="fas fa-code"></i>
						</button>
					</div>
				</div>
			{% endif %}
		</div>
	</div>
</div>
