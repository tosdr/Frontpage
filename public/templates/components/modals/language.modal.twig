<div class="modal fade" id="languageModal" tabindex="-1" aria-labelledby="languageModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="languageModalLabel">{{ 'components.modals.language.modal.title'|translate }}</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">

				<ul class="list-group">
					{% for Language in languages %}
						<a class="list-group-item d-flex justify-content-between align-items-center {% if locale|getlang(false).code == Language.code %}active{% endif %}" href="{{ generateLink('', false, Language.code) }}">

							{{ Language.nativename|translate }}
							<img class="float-end" src="https://translate.tosdr.org/widgets/crispcms/{{ Language.code }}/svg-badge.svg" alt="Translation Progress"/>

						</a>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
</div>
