    {% if loop.first or loop.index0 is divisible by(columns) %}
        <div class="row mb-5">
        {% endif %}

        {% include "components/servicegrid/service.twig" with {'service': Service, 'col': (12 /columns)} %}

        {% if loop.last or loop.index is divisible by(columns) %}
        </div>
    {% endif %}
{% endfor %}