<div class="col-xl-6 col-sm-12 mt-2">
	<div class="shadow-lg card-rounded custom-card bg-body d-flex h-100">
		<div class="card-body">
			<div class="my-2 mx-1">
				<a class="link-unstyled ms-1" href="/service/{{ service._source.id }}">
					<img src="{{ config.s3_logos }}/{{ service._source.id ~ ".png" }}" width="48" alt="{{ service._source.name }}"/>
					{% if service._source.is_comprehensively_reviewed %}
						{% set rating = service._source.rating %}
					{% else %}
						{% set rating = "N/A" %}
					{% endif %}
					<span class="ms-1 fs-3 fw-bold align-middle">{{ service._source.name }}</span>
					<span class="ms-1 align-middle">
						{% include "components/services/rating.twig" with {'rating': rating} %}
					</span>
				</a>
			</div>

			<div class="ms-3">

				{% set count = 0 %}
				{% for point in getPointsByServiceScored(service._source.id) %}
					{% if point.status == "approved" and count < max|default(7) %}
						{% set caseDetails = getCase(point.case_id) %}

						<li data-toggle="tooltip" title="{{ point.quoteText|striptags|truncateText(300) }}" class="list-unstyled text-truncate">

							<span class="position-relative">
								<span class="me-3">
									{% include "components/services/classification.twig" with {'rating': caseDetails.classification } %}
								</span>

								<a class="link-unstyled align-top" target="_blank" href="{{ config.phoenix_url }}/points/{{ point.id }}">{{ point.title }}</a>

							</span>
						</li>

						{% set count = count + 1 %}


						{% if count == max|default('7') %}


							<li class="list-unstyled text-truncate">
								<span class="position-relative">
									<span class="me-3">
										{% include "components/services/classification.twig" with {'rating': 'add' } %}
									</span>
									<a class="link-unstyled align-top" target="_blank" href="{{ generateLink(config.phoenix_url ~ "/services/" ~ service._source.id, true) }}">{{ 'components.servicegrid.contribute'|translate(1, {'{{ service }}': service._source.name}) }}</a>

								</span>
							</li>

						{% endif %}

					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
</div>
