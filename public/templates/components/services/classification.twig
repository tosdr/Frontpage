{% if rating == "good" %}
    <span class="badge classification-badge rounded-pill bg-success position-relative">
        <i class="fas fa-arrow-up fa-fw position-absolute top-50 start-50 translate-middle"></i> {{ rating_text }}
    </span>
{% endif %}
{% if rating == "neutral" %}
    <span class="badge classification-badge rounded-pill bg-secondary position-relative">
        <i class="fas fa-circle fa-fw position-absolute top-50 start-50 translate-middle"></i> {{ rating_text }}
    </span>
{% endif %}
{% if rating == "bad" %}
    <span class="badge classification-badge rounded-pill bg-warning position-relative">
        <i class="fas fa-arrow-down fa-fw position-absolute top-50 start-50 translate-middle"></i> {{ rating_text }}
    </span>
{% endif %}
{% if rating == "blocker" %}
    <span class="badge classification-badge bg-danger rounded-0 position-relative">
        <i class="fas fa-times fa-fw position-absolute top-50 start-50 translate-middle"></i> {{ rating_text }}
    </span>
{% endif %}
{% if rating == "add" %}
    <span class="badge classification-badge bg-transparent rounded-0 position-relative">
        <i class="fas fa-plus fa-lg fa-fw position-absolute top-50 start-50 translate-middle text-secondary"></i> {{ rating_text }}
    </span>
{% endif %}