{% set currentPage = 'downloads' %}
{% set pageTitle = 'views.downloads.title'|translate %}
{% set error = false %}


{% extends "base.twig" %}


{% block content %}

	<div class="jumbotron jumbotron-fluid mb-4">
		<div class="container text-center">
			<h1 class="display-4">{{ 'views.downloads.title'|translate }}</h1>
			<p class="mt-2">{{ 'views.downloads.jumbotron.text'|translate|raw }}</p>
		</div>
	</div>


	<div class="container">

		<div class="container text-center">
			<h1 class="display-3">{{ 'views.downloads.desktop.title'|translate }}</h1>
			<p class="mt-2">{{ 'views.downloads.desktop.text'|translate|raw }}</p>
		</div>


		<div class="row">
			{% for extension in config.extensions.desktop %}
				{% include "components/extensions/card.twig" %}
			{% endfor %}
		</div>


		<div class="container mt-4 text-center">
			<h1 class="display-3">{{ 'views.downloads.browser.title'|translate }}</h1>
			<p class="mt-2">{{ 'views.downloads.browser.text'|translate|raw }}</p>
		</div>

		<div class="row">
			{% for extension in config.extensions.browser %}
				{% include "components/extensions/card.twig" %}
			{% endfor %}
		</div>
	</div>
{% endblock %}
{% block scripts %}{% endblock %}
