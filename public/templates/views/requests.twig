{% set currentPage = 'requests' %}
{% set pageTitle = 'views.requests.title'|translate %}
{% set error = false %}


{% extends "base.twig" %}


{% block content %}
	{{ include("components/navbar.twig") }}

	<div class="jumbotron jumbotron-fluid mb-4">
		<div class="container text-center">
			<h1 class="display-4">{{ 'views.requests.title'|translate }}</h1>
			<p class="mt-2">{{ 'views.downloads.jumbotron.text'|translate|raw }}</p>
		</div>
	</div>
	<div class="container">
		<section id="extensions">

			<div class="row">
				{% for extension in config.extensions %}
					{% include "components/extensions/card.twig" %}
				{% endfor %}
			</div>
		</section>
	</div>
{% endblock %}
{% block scripts %}{% endblock %}
