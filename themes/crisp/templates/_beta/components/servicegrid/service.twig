<div class="col-{{ col }}">
    <div class="shadow-lg card-rounded custom-card bg-body d-flex h-100">
        <div class="card-body">
            <div class="mb-3">
                <a class="link-unstyled ms-3" href="/{{ locale }}/service/{{ service._source.id }}">
                    <img src="{{ includeResource(service._source.id ~ ".png", false, 's3_logos') }}"
                         width="48" alt="{{ service._source.name }}"/>
                    {% if service._source.is_comprehensively_reviewed %}
                        {% set rating = service._source.rating %}
                    {% else %}
                        {% set rating = "N/A" %}
                    {% endif %}
                    <span class="ms-1 fs-3 fw-bold align-middle">{{ service._source.name }}</span>
                    <span class="ms-1 align-middle">
                        {% include "components/rating.twig" with {'rating': rating} %}
                    </span>
                </a>
            </div>

            <div class="container">

                {% set count = 0 %}
                {% for point in getPointsByServiceScored(service._source.id) %}
                    {% if point.status == "approved" and count < 7 %}
                        {% set caseDetails = getCase(point.case_id) %}

                        <li data-toggle="tooltip"
                            title="{{ point.quoteText|striptags|truncateText(300) }}"
                            class="list-unstyled">

                            <span class="position-relative">
                                <span class="me-2">
                                    {% include "_beta/components/classification.twig" with {'rating': caseDetails.classification } %}
                                </span>

                                <a class="link-unstyled align-top"
                                   target="_blank"
                                   href="{{ config.phoenix_url }}/points/{{ point.id }}">{{ point.title|truncateText(70) }}</a>

                            </span>
                        </li>

                        {% set count = count + 1 %}
                    {% endif %}
                {% endfor %}

                <a target="_blank" class="float-end"
                   href="{{ generateLink(config.phoenix_url ~ "/services/" ~ service._source.id, true) }}">
                    <span class="badge bg-secondary">
                        <i class="fas fa-hands-helping"></i> {{ 'components.servicegrid.service.button.expand.text'|translate }}
                    </span>
                </a>
            </div>
        </div>
    </div>
</div>
