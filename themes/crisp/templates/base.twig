            <link rel="stylesheet" href="/themes/{{ config.theme }}/css/general.min.css?v1">
            <link rel="stylesheet" href="/themes/{{ config.theme }}/css/ranking-badges.min.css">

            <!-- END Default Crisp CSS -->
            <title>{{ pageTitle }} {{ config.page_delimiter }} {{ config.site_name }}</title>
        {% endblock %}
    </head>
    <body>
        {% block content %}{% endblock %}
        {% block footer %}
            {{ include("footer.twig") }}
        {% endblock %}
    </body>
    <script src="/themes/{{ config.theme }}/js/jquery/jquery.min.js"></script>
    <script src="/themes/{{ config.theme }}/js/jquery/popper.min.js"></script>
    <script src="/themes/{{ config.theme }}/js/bootstrap/bootstrap.min.js"></script>
    {# <script src="/themes/{{ config.theme }}/js/jquery/jquery-ui.min.js"></script> #}
    <script src="/themes/{{ config.theme }}/js/sweetalert/sweetalert.min.js"></script>
    <script src="/themes/{{ config.theme }}/js/fontawesome/all.min.js"></script>

    {% block scripts %}{% endblock %}
    <!-- START Default Crisp JS -->
    {% block default_scripts %}
        <script src="/themes/{{ config.theme }}/js/crisp.min.js?v1"></script>
        <script src="/themes/{{ config.theme }}/js/darkmode-js.min.js"></script>
