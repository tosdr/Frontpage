{% set sessionType = 'visitor' %} {# visitor, customer, artist, admin #}

{% if user is defined %}
    {% set sessionType = 'user' %}
{% endif %}

<!DOCTYPE html>
<html>
    <head>
        {% block head %}

            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="/themes/{{ config.theme }}/css/bootstrap/bootstrap.min.css">
            {# <link rel="stylesheet" href="/themes/{{ config.theme }}/css/jquery/jquery-ui.min.css"> #}
            <link rel="stylesheet" href="/themes/{{ config.theme }}/css/sweetalert/sweetalert.min.css">
            <!-- START Default Crisp CSS -->
            <link rel="stylesheet" href="/themes/{{ config.theme }}/css/general.min.css">
            <link rel="stylesheet" href="/themes/{{ config.theme }}/css/general.min.css">
            <link rel="stylesheet" href="/themes/{{ config.theme }}/css/ranking-badges.min.css">

            <!-- END Default Crisp CSS -->
            <title>{{ pageTitle|translate }} {{ config.page_delimiter }} {{ config.site_name }}</title>
        {% endblock %}
    </head>
    <body>
        {% block content %}{% endblock %}
        {% block footer %}
            {{ include("footer.twig") }}
        {% endblock %}
    </body>
    <script src="/themes/{{ config.theme }}/js/jquery/jquery.min.js"></script>
    <script src="/themes/{{ config.theme }}/js/jquery/popper.min.js"></script>
    <script src="/themes/{{ config.theme }}/js/bootstrap/bootstrap.min.js"></script>
    {# <script src="/themes/{{ config.theme }}/js/jquery/jquery-ui.min.js"></script> #}
    <script src="/themes/{{ config.theme }}/js/sweetalert/sweetalert.min.js"></script>
    <script src="/themes/{{ config.theme }}/js/fontawesome/all.min.js"></script>

    {% block scripts %}{% endblock %}
    <!-- START Default Crisp JS -->
    {% block default_scripts %}
        <script src="/themes/{{ config.theme }}/js/crisp.min.js"></script>
    {% endblock %}
    <!-- END Default Crisp JS -->
</html>