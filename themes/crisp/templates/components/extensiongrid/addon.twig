<div class="col-{{ col }}">
  <div class="card h-100">
    <div class="card-body d-flex flex-column">
      <h4 class="card-title">
        {{ extension.browser }} {{ extension.type|translate }}
      </h4>
      <div class="card-text mb-2">
        <div class="row">
          <div class="col-2">
            <img class="img-responsive" style="max-width: 42px;" src="{{ includeResource(extension.image) }}">
          </div>
          <div class="col-10">
            {{ extension.description|translate|raw }}
          </div>
        </div>
      </div>
      <div class="btn-group d-flex mt-auto" role="group" aria-label="...">
        <a target="_blank" href="{{ generateLink(extension.repository, true) }}" class="btn btn-warning btn-block mt-auto w-100 h-100"><i class="fab fa-github"></i> {{ 'components.extensiongrid.addon.source'|translate }}</a>

        <a target="_blank" href="{% if featured is defined and extension.direct is defined %}{{ generateLink(extension.direct, true) }}{% else %}{{ generateLink(extension.url, true) }}{% endif %}" class="btn btn-success btn-block mt-auto w-100 h-100"><i class="fas fa-download"></i> {{ 'components.extensiongrid.addon.add'|translate(1, {"{{ browser }}": extension.browser}) }}</a>
      </div>

    </div>
  </div>
</div>